@model IEnumerable<DigitalExaminations.ViewModels.ResultViewModel>

@{
    ViewData["Title"] = "ViewResult";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h1>Exam Results</h1>
<div>
    <br />
    <div>
        <table id="resultGrid" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            
            <thead>
                <tr>
                    <th>Exam Name</th>
                    <th>Total Questions</th>
                    <th>Correct</th>
                    <th>Wrong</th>
                    <th>Percentage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExamName</td>
                        <td>@item.TotalQuestion</td>
                        <td>@item.CorrectAnswer</td>
                        <td>@item.WrongAnswer</td>
                        <td>@((item.CorrectAnswer / item.TotalQuestion) * 100) %</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Profile">Profile</a>
</div>