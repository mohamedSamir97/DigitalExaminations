@model ExamViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<h1>Create Exam</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="form-group mb-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" value="@DateTime.Today.Date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Time" class="control-label" title="Time (in hours)"></label> <input asp-for="Time" type="number" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label" title="Group">Group</label>
                <select asp-for="GroupsId" asp-items="@(new SelectList (Model.GroupList, "Id", "Name"))" class="form-control">
                </select>
                <span asp-validation-for="GroupsId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
